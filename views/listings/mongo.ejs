<% layout("/layouts/boilarplate") %>
<body>
   <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
    }
    .filter{
      text-align: center;
      margin-left: 2rem;
      margin-top: 2rem;
      cursor: pointer;
    }
    .filter:hover {
      transform: scale(1.05);
      transition: all 0.2s;
    }
    .filter.active {
      color: #fe424d;
      border-bottom: 2px solid #fe424d;
    }
    .category-heading {
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-weight: bold;
      color: #333;
    }
    .view-all-btn {
      background-color: #fe424d;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      margin-top: 1rem;
      cursor: pointer;
    }
    .view-all-btn:hover {
      background-color: #e63b46;
    }
   </style>
    <div id="filters">
