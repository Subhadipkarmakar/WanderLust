<% layout("/layouts/boilarplate") %>
<div class="row mt-3" >
    <div class="col-8 offset-1">
<h3>edit the listings</h3>
<form method="post" action="/listings/<%= listing._id %>?_method=PUT"  novalidate class="needs-validation" >
    <div class="mb-3">
        <label for="title" class="from-label">Title</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text"  class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="description"  class="from-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
    </div>
    <div class="row">
    <div class="mb-3 col-md-4">
        <label for="country"  class="from-label">Country</label>
        <input name="listing[country]"  value="<%= listing.country %>" type="text"  class="form-control" required>
       
    </div>
    <div class="mb-3 col-md-8">
        <label for="price"  class="from-label">Price</label>
        <input name="listing[price]"  value="<%= listing.price %>" type="number" class="form-control" required>
    </div>
</div>
    <div class="mb-3">
        <label for="image"  class="from-label">Image-Url</label>
        <input name="listing[image]" value="<%= listing.image.url %>" type="text" class="form-control" required> 
    </div>
    <div class="mb-3">
        <label for="location"  class="from-label">Location</label>
        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
    </div>
    
    <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" class="form-select" required>
            <option value="">Select a category</option>
            <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
            <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
            <option value="Iconic City" <%= listing.category === 'Iconic City' ? 'selected' : '' %>>Iconic City</option>
            <option value="Mountain" <%= listing.category === 'Mountain' ? 'selected' : '' %>>Mountain</option>
            <option value="Forest" <%= listing.category === 'Forest' ? 'selected' : '' %>>Forest</option>
            <option value="Beach" <%= listing.category === 'Beach' ? 'selected' : '' %>>Beach</option>
            <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
            <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
            <option value="Farm" <%= listing.category === 'Farm' ? 'selected' : '' %>>Farm</option>
            <option value="Top City" <%= listing.category === 'Top City' ? 'selected' : '' %>>Top City</option>
            <option value="Lake" <%= listing.category === 'Lake' ? 'selected' : '' %>>Lake</option>
            <option value="Golfing" <%= listing.category === 'Golfing' ? 'selected' : '' %>>Golfing</option>
        </select>
        <div class="invalid-feedback">Please select a category</div>
    </div>
   
    <button class="btn btn-dark edit-btn mt-3">Update Listing</button>
</form>
</div>
</div>
<script src="/js/script.js"></script>   