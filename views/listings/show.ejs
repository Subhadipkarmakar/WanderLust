<% layout("/layouts/boilarplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><b><%= listing.title %></b></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <br>
                <%= listing.description %> <br>
                <strong>Price:</strong> &#8377; <%= listing.price %> per night<br>
                <strong>Location:</strong> <%= listing.location %>, <%= listing.country %> <br>
                <% if(listing.category) { %>
                <strong>Category:</strong> <%= listing.category %> <br>
                <% } %>
            </p>
            
            <div class="d-grid gap-2 mt-4">
                <a href="/listings/<%= listing._id %>/book" class="btn btn-success">Book Now</a>
            </div>
        </div>
    </div>
</div>

<div class="btns mt-3">
    <% if(curruser && listing.owner && curruser._id.equals(listing.owner._id)) { %>
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" novalidate class="needs-validation">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    <% } %>
</div>
<br>

<div class="col-8 offset-3 mb-3 mt-3">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post">
        <div class="mt-3 mb-3">
            <label for="rating" class="from-label">Rating</label>
            <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]" required>
        </div>
        <fieldset class="starability-checkmark">
            <legend>First rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        <div class="mt-3 mb-3">
            <label for="comment" class="from-label">Comment</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please submit some comments for the review</div>
        </div>
        <input type="hidden" name="review[author]" value="author-id"> <!-- Replace with actual user ID if available -->
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>

    <!-- <h2>Reviews</h2>
    <ul>
      <% listing.reviews.forEach(review => { %>
        <li>
          <strong>Rating:</strong> <%= review.rating %> <br>
          <strong>Comment:</strong> <%= review.comment %>
        </li>
      <% }) %>
    </ul> -->
  <p><b>All Reviews</b></p>
  <div class="row">
    <% for(review of listing.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
        <h5 class="card-title">jane doe</h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating %> stars</p>
        </div>
        <form class="mb-3 mt-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark m">Delete</button>
        </form>
    </div>
    <% } %>
</div>