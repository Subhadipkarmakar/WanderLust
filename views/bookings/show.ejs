<% layout("/layouts/boilarplate") %>
<body>
    <div class="row mt-3">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4>Booking Confirmed!</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success mb-4">
                        <h5 class="alert-heading">Thank you for your booking!</h5>
                        <p>Your reservation has been confirmed. We've sent a confirmation email with all the details.</p>
                    </div>
                    
                    <h5>Booking Details</h5>
                    <hr>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <% if (booking.listing && booking.listing.image && booking.listing.image.url) { %>
                                <img src="<%= booking.listing.image.url %>" alt="<%= booking.listing.title %>" class="img-fluid rounded">
                            <% } else { %>
                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fa-solid fa-image text-white fa-3x"></i>
                                </div>
                            <% } %>
                        </div>
                        <div class="col-md-8">
                            <% if (booking.listing) { %>
                                <h5><%= booking.listing.title %></h5>
                                <p><i class="fa-solid fa-location-dot"></i> <%= booking.listing.location %>, <%= booking.listing.country %></p>
                            <% } else { %>
                                <h5 class="text-muted">Listing no longer available</h5>
                                <p class="text-danger">
                                    <i class="fa-solid fa-triangle-exclamation"></i> 
                                    This property has been removed from our listings
                                </p>
                            <% } %>
                            
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <p><strong>Check-in:</strong><br> <%= booking.checkIn.toLocaleDateString() %></p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Check-out:</strong><br> <%= booking.checkOut.toLocaleDateString() %></p>
                                </div>
                            </div>
                            
                            <p><strong>Guests:</strong> <%= booking.guests %></p>
                            <p><strong>Total Price:</strong> â‚¹<%= booking.totalPrice %></p>
                            <p><strong>Booking Status:</strong> 
                                <span class="badge <%= booking.status === 'confirmed' ? 'bg-success' : booking.status === 'cancelled' ? 'bg-danger' : 'bg-warning' %>">
                                    <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                </span>
                            </p>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/bookings" class="btn btn-outline-primary">View All Bookings</a>
                        <a href="/listings" class="btn btn-primary">Continue Browsing</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>